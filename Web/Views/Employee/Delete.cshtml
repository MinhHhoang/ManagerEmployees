@model DomainModel.Employee
@{
    ViewBag.Title = "Xóa Nhân viên";
}

<div class="box box-prymari">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Delete/@Model.EmployeeID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Họ nhân viên</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.FirstName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên nhân viên</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.LastName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Ngày sinh</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.BirthDate</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>

          
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (BusinessLayer.CommonDataService.InUsedEmployee(Model.EmployeeID))
                    {
                        <p class="text-danger">Không được xóa nhân viên này</p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-remove"></i>Đồng ý xóa
                        </button>
                    }
                    <a class="btn btn-warning" href="~/employee">
                        <i class="fa fa-ban"></i>Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer">
    </div>
</div>

