@model DomainModel.MemberProject
@{
    // ViewBag.Title = "Bổ sung member project";
}

<div class="box box-primary">
    <div class="box-header">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/memberproject/save" method="post">
        


            <div class="form-group">
                <label class="control-label col-sm-2">Tên dự án :</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.ProjectID, SelectListHelper.Projects(), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ProjectID, "", new { @style = "color:#FF0000" })


                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thành viên :</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.EmployeeID, SelectListHelper.Employees(), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.EmployeeID, "", new { @style = "color:#FF0000" })


                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Position : </label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.Position, SelectListHelper.Positions(), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Position, "", new { @style = "color:#FF0000" })


                </div>
            </div>





            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/memberproject">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>