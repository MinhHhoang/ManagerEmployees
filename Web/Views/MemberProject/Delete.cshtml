@model DomainModel.MemberProject
@{
    ViewBag.Title = "Xóa thành viên";
}

<div class="box box-prymari">
    <div class="box-body">
        <form class="form-horizontal" action="~/memberproject/Delete/@Model.EmployeeID/@Model.ProjectID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên thành viên :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.FirstName<span> </span>@Model.LastName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Vị trí : </label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Position</p>
                </div>
            </div>




            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-remove"></i>Đồng ý xóa
                    </button>
                    <a class="btn btn-warning" href="~/memberproject">
                        <i class="fa fa-ban"></i>Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer">
    </div>
</div>
