@model DomainModel.PhongBan
@{
    // ViewBag.Title = "Bổ sung Phòng Ban";
}

<div class="box box-prymari">
    <div class="box-body">
        <form class="form-horizontal" action="~/category/save" method="post">
            <input type="hidden" name="codePhongBan" value="@Model.codePhongBan" />
            <div class="form-group">
                <label class="control-label col-sm-2" for="namePhongBan">Tên Phòng Ban</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="namePhongBan" name="namePhongBan" placeholder="" autofocus value="@Model.namePhongBan">
                    @Html.ValidationMessage("namePhongBan", new { @class = "text-danger" })
                </div>
            </div>

            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i>Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/phongban">
                        <i class="fa fa-ban"></i>Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer">
    </div>
</div>

