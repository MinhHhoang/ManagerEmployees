@model DomainModel.PhongBan
@{
    ViewBag.Title = "Xóa Phòng Ban";
}

<div class="box box-prymari">
    <div class="box-body">
        <form class="form-horizontal" action="~/phongban/delete/@Model.codePhongBan" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên loại hàng</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.namePhongBan</p>
                </div>
            </div>

           
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (BusinessLayer.CommonDataService.InUsedPhongBan(Model.codePhongBan))
                    {
                        <p class="text-danger">Không được xóa phòng ban này</p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-remove"></i>Đồng ý xóa
                        </button>
                    }
                    <a class="btn btn-warning" href="~/phongban">
                        <i class="fa fa-ban"></i>Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer">
    </div>
</div>

