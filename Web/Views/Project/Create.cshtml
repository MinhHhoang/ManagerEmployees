@model DomainModel.Project
@{
    // ViewBag.Title = "Bổ sung project";
}

<div class="box box-primary">
    <div class="box-header">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/project/save" method="post">
            @Html.HiddenFor(m => m.ProjectID)



            <div class="form-group">
                <label class="control-label col-sm-2">Tên project :</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.NameProject, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.NameProject, "", new { @style = "color:#FF0000" })
                </div>
            </div>




            <div class="form-group">
                <label class="control-label col-sm-2">Người quản lý :</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.ProjectManager, SelectListHelper.Employees(), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ProjectManager, "", new { @style = "color:#FF0000" })

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Trạng thái :</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.StatusProject, SelectListHelper.StatusProject(), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.StatusProject, "", new { @style = "color:#FF0000" })


                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-sm-2">Description:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @style = "color:#FF0000" })
                </div>
            </div>

          

            <div class="form-group">
                <label class="control-label col-sm-2">Link Source:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.LinkSource, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LinkSource, "", new { @style = "color:#FF0000" })
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2">Ngày Bắt đầu:</label>
                <div class="col-sm-10">
                    <input type="text" name="StartDateString" class="form-control datepicker" value="@string.Format("{0:dd/MM/yyyy}",Model.StartDate)" />
                    @Html.ValidationMessageFor(m => m.StartDate, "", new { @style = "color:#FF0000" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày kết thúc:</label>
                <div class="col-sm-10">
                    <input type="text" name="EndDateString" class="form-control datepicker" value="@string.Format("{0:dd/MM/yyyy}",Model.FinishDate)" />
                    @Html.ValidationMessageFor(m => m.FinishDate, "", new { @style = "color:#FF0000" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/project">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>